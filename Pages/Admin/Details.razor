@page "/admin/LOLEMs/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
 <tbody>
 <tr><th>ID</th><td>@LOLEM.LOLEMID</td></tr>
 <tr><th>Title</th><td>@LOLEM.Title</td></tr>
 <tr><th>Description</th><td>@LOLEM.Description</td></tr>
 <tr><th>Genre</th><td>@LOLEM.Genre</td></tr>
 <tr><th>Price</th><td>@LOLEM.Price.ToString("C")</td></tr>
 </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/LOLEMs">Back</NavLink>
@code {
 [Inject]
 public ILOLEMCosmeticsRepository Repository { get; set; }
 [Parameter]
 public long Id { get; set; }
 public LOLEM LOLEM { get; set; }
 protected override void OnParametersSet()
 {
 LOLEM = Repository.LOLEMs.FirstOrDefault(b => b.LOLEMID == Id);
 }
 public string EditUrl => $"/admin/LOLEMs/edit/{LOLEM.LOLEMID}";
}
