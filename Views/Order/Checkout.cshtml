@model Order
<p>Vui lòng nhập thông tin của ban:</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>ĐẶT HÀNG </h3>
    <div class="form-group">
        <label>Họ Và Tên:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>THÔNG TIN NGƯỜI MUA </h3>
    <div class="form-group">
        <label>Số Nhà:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Xã-Phường:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Huyện-Quận:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tỉnh-Thành Phố:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số Điện Thoại:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>CMND/CCCD:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="ĐẶT HÀNG NGAY" />
    </div>
</form>